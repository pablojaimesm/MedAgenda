<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="Controladores.RegistroPacientesControlador">

	<Label style="-fx-font-size: 20px;" text="Registro de Pacientes" />

	<GridPane alignment="CENTER" hgap="10" vgap="5">
		<padding>
			<Insets bottom="10" left="10" right="10" top="10" />
		</padding>

		<Label text="Nombres:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
		<TextField fx:id="nombresTextField" GridPane.columnIndex="1"
			GridPane.rowIndex="0" />

		<Label text="Apellidos:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
		<TextField fx:id="apellidosTextField" GridPane.columnIndex="1"
			GridPane.rowIndex="1" />

		<Label text="Edad:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
		<TextField fx:id="edadTextField" GridPane.columnIndex="1"
			GridPane.rowIndex="2" />

		<Label text="Identificación:" GridPane.columnIndex="0"
			GridPane.rowIndex="3" />
		<TextField fx:id="identificacionTextField" GridPane.columnIndex="1"
			GridPane.rowIndex="3" />

		<Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
		<TextField fx:id="telefonoTextField" GridPane.columnIndex="1"
			GridPane.rowIndex="4" />

		<Label fx:id="mensajeLabel" GridPane.columnIndex="0" GridPane.columnSpan="2"
			GridPane.rowIndex="5" />

		<Button onAction="#registrarPaciente" prefHeight="26.0"
			prefWidth="149.0" text="Registrar" GridPane.columnIndex="1"
			GridPane.columnSpan="2" GridPane.rowIndex="6" />
	</GridPane>
</VBox>
